{
  "name": "Shadow Robot Dev Env",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python",
        "ms-vscode.cpptools",
        "twxs.cmake"
      ]
    }
  },
  "runArgs": [
    "--network=host",
    "--privileged",
    "--mount=type=bind,source=/mnt/wslg,target=/mnt/wslg,readonly",
    "--mount=type=bind,source=/tmp,target=/tmp"
  ],
  "containerEnv": {
    "DISPLAY": ":0",
    "WAYLAND_DISPLAY": "wayland-0",
    "XDG_RUNTIME_DIR": "/mnt/wslg/runtime-dir"
  },
  "remoteUser": "root"
}